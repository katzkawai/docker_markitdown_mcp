{
  "mcpServers": {
    "markitdown-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        "${cwd}:/workdir",
        "-w",
        "/workdir",
        "markitdown-mcp"
      ],
      "env": {
        "MARKITDOWN_ENABLE_PLUGINS": "True"
      }
    }
  }
}